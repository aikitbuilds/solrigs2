
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public lead submission
    match /leads/{lead} {
      allow create: if true;
      allow read, update, delete: if false; 
    }
    
    // Allow public reading of products and metrics
    match /products/{product} {
      allow read: if true;
    }
    match /rwa_metrics/{metric} {
      allow read: if true;
    }
    match /campaigns/{campaign} {
      allow read: if true;
    }
  }
}
